{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start API Service",
      "type": "shell",
      "command": "python3",
      "args": ["services/api/customer_api.py"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Serving Flask.*",
          "endsPattern": ".*Running on.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "services"
      }
    },
    {
      "label": "Start Web App",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "options": {
        "cwd": "${workspaceFolder}/webapp/customer-app"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Compiling.*",
          "endsPattern": ".*Compiled.*|.*Failed to compile.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "services"
      }
    },
    {
      "label": "Start All Services",
      "dependsOn": ["Start API Service", "Start Web App"],
      "problemMatcher": []
    }
  ]
}
